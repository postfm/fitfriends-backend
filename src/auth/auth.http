@AToken={{login.response.body.accessToken}}

# Создание нового пользователя с ролью "Пользователь"
POST http://localhost:4000/fitfriends/auth/register HTTP/1.1
Content-Type: application/json

{
  "name": "Mary",
  "email": "mary@user.com",
  "avatar": "/store/avatar.jpg",
  "password": "123456",
  "gender": "неважно",
  "birthday": "2024-11-03",
  "roles": ["пользователь"],
  "location": "Удельная"
  
}

###
# Аутентификация пользователя
# @name login
POST http://localhost:4000/fitfriends/auth/login HTTP/1.1
Content-Type: application/json

{
  "email": "mary@user.com",
  "password": "123456"
}
###

# Добавление опросника пользователя
PATCH  http://localhost:4000/fitfriends/users/22 HTTP/1.1
Authorization: Bearer {{AToken}}
Content-Type: application/json

{
  "description": "Описание пользователя",
  "image": "/img/content/thumbnails/friend-19.jpg",
  "levelOfTrain": "новичок",
  "typeOfTraining": ["стрейчинг","кроссфит"],
  "timeOfTraining": "10-30 мин",
  "caloriesToLose": 2000,
  "caloriesPerDay": 2000,
  "readyToTrain": true
}


